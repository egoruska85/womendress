<nav class="navbar navbar-expand-lg sticky-top" style="background-image: linear-gradient(
    45deg,
    hsl(0deg 100% 20%) 0%,
    hsl(9deg 93% 24%) 8%,
    hsl(16deg 92% 28%) 17%,
    hsl(22deg 95% 31%) 25%,
    hsl(27deg 100% 33%) 33%,
    hsl(30deg 100% 36%) 42%,
    hsl(34deg 100% 39%) 50%,
    hsl(37deg 100% 41%) 58%,
    hsl(40deg 100% 44%) 67%,
    hsl(44deg 100% 46%) 75%,
    hsl(47deg 100% 47%) 83%,
    hsl(51deg 100% 49%) 92%,
    hsl(55deg 100% 50%) 100%">
  <div class="container-fluid">

    <%= link_to root_path, class:'navbar-brand' do %>
      <%= image_tag(@logo, alt:"Bootstrap", width: '90rem;')%>
      <!--<b style="font-family: bankgothic; font-weight: 900; font-size: 35px; width: 300px;">MB</b>-->
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

        <% @top_categories.each do |category| %>
          <li class="nav-item">
            <%= link_to category_path(category), class:"nav-link active" do %>
              <%= category.name_rus if params != true and params[:locale] != 'ru' and params[:locale] != 'en'%>
              <%= category.name_eng if params[:locale] == 'en' %>
              <%= category.name_rus if params[:locale] == 'ru' %>
            <% end %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= t('navbar.other') %>
          </a>
          <ul class="dropdown-menu" style="background-image: linear-gradient(
              45deg,
              hsl(0deg 100% 20%) 0%,
              hsl(9deg 93% 24%) 8%,
              hsl(16deg 92% 28%) 17%,
              hsl(22deg 95% 31%) 25%,
              hsl(27deg 100% 33%) 33%,
              hsl(30deg 100% 36%) 42%,
              hsl(34deg 100% 39%) 50%,
              hsl(37deg 100% 41%) 58%,
              hsl(40deg 100% 44%) 67%,
              hsl(44deg 100% 46%) 75%,
              hsl(47deg 100% 47%) 83%,
              hsl(51deg 100% 49%) 92%,
              hsl(55deg 100% 50%) 100%">
            <% @other_categories.each do |category| %>
              <li class="nav-item">
                <%= link_to category_path(category), class:"nav-link active" do %>
                  <%= category.name_rus if params != true and params[:locale] != 'ru' and params[:locale] != 'en'%>
                  <%= category.name_eng if params[:locale] == 'en' %>
                  <%= category.name_rus if params[:locale] == 'ru' %>
                <% end %>
              </li>
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to t('navbar.categories'), categories_path, class:'nav-link active' %></li>
            <li><%= link_to t('navbar.products'), products_path, class:'nav-link active' %></li>
          </ul>
        </li>

      </ul>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
