<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body style="background: #121212;">
    <%= render 'layouts/top_navbar' %>
    <%= render 'layouts/bottom_navbar' %>
    <center>
      <div class="width: 400px; background-image: linear-gradient(
          45deg,
          hsl(0deg 100% 20%) 0%,
          hsl(9deg 93% 24%) 8%,
          hsl(16deg 92% 28%) 17%,
          hsl(22deg 95% 31%) 25%,
          hsl(27deg 100% 33%) 33%,
          hsl(30deg 100% 36%) 42%,
          hsl(34deg 100% 39%) 50%,
          hsl(37deg 100% 41%) 58%,
          hsl(40deg 100% 44%) 67%,
          hsl(44deg 100% 46%) 75%,
          hsl(47deg 100% 47%) 83%,
          hsl(51deg 100% 49%) 92%,
          hsl(55deg 100% 50%) 100%">
          <center><h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1></center>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= bootstrap_devise_error_messages! %>
          <center>
            <div style="width: 400px;">
              <div class="field text-black">
                <%= f.label 'Пользователь', class:"text-white" %><br />
                <%= f.text_field :username, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group text-black">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
              </div>
              <div class="field text-black">
                <%= f.label 'Номер телефона', class:"text-white" %><br />
                <%= f.text_field :phone, autofocus: true, class: 'form-control' %>
              </div>
              <div class="field text-black">
                <%= f.label 'Ваш адрес', class:"text-white" %><br />
                <%= f.text_field :address, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group text-black">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

                <small class="form-text text-black"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
              </div>

              <div class="form-group text-black">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
              </div>

              <div class="form-group text-black">
                <%= f.label :current_password %>
                <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

                <small class="form-text text-black"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
              </div>

              <div class="form-group text-black">
                <%= f.submit t('.update'), class: 'btn btn-primary' %>
              </div>
              <% end %>
          <br>
              <p class="form-group text-black"><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class:'btn text-white btn-danger' %>.</p>

              <%= link_to 'Назад', :back, class:'btn text-white btn-warning' %>
              <br><br>
              <%= link_to 'На главную', root_path, class:"btn btn-info" %>
            </div>
          </center>


      </div>
    </center>
  </body>
</html>
